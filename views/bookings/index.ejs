<% layout("/layouts/boilerplate") %>

<div class="col-8 offset-2 mt-3">
  <h3 class="mb-4" style="font-weight: 700">My Trips</h3>

  <!-- Empty State -->
  <% if(bookings.length === 0) { %>
  <div class="empty-state-container">
    <div class="empty-icon">âœˆï¸</div>
    <h4>No trips booked... yet!</h4>
    <p>Time to dust off your bags and start planning your next adventure.</p>
    <a href="/listing" class="btn btn-explore">Start Searching</a>
  </div>
  <% } %>

  <!-- Bookings Grid -->
  <div class="row">
    <% for(let booking of bookings) { %>
    <div class="col-md-6 col-lg-5 mb-4 ms-2">
      <div class="card reservation-card">
        <!-- Image -->
        <div class="card-img-wrapper">
          <img
            src="<%= booking.listing.image.url %>"
            class="card-img-top reservation-img"
            alt="listing image"
          />
          <div class="reservation-badge">
            <%= booking.guests %> Guest<%= booking.guests > 1 ? 's' : '' %>
          </div>
        </div>

        <div class="card-body reservation-body">
          <!-- Title -->
          <h5 class="card-title reservation-title">
            <%= booking.listing.title %>
          </h5>

          <!-- Details -->
          <div class="reservation-info">
            <div class="info-row">
              <span class="info-icon">ğŸ“…</span>
              <span class="info-text">
                <%= new Date(booking.checkIn).toLocaleDateString('en-IN',
                {day:'numeric', month:'short'}) %> &nbsp;â€“&nbsp; <%= new
                Date(booking.checkOut).toLocaleDateString('en-IN',
                {day:'numeric', month:'short', year:'numeric'}) %>
              </span>
            </div>
            <div class="info-row">
              <span class="info-icon">ğŸ“</span>
              <span class="info-text"><%= booking.listing.location %></span>
            </div>
            <div class="info-row price-row">
              <span class="info-icon">ğŸ’³</span>
              <span class="info-price"
                >&#8377;<%= booking.totalPrice.toLocaleString("en-IN") %></span
              >
              <span class="info-label">total</span>
            </div>
          </div>

          <!-- Action -->
          <form
            action="/bookings/<%= booking._id %>?_method=DELETE"
            method="POST"
            class="mt-3"
          >
            <button class="btn btn-cancel">Cancel Reservation</button>
          </form>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
